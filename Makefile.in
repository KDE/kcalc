#
# Makefile for kcalc
#

########## Files ##########

SRCS    = kcalc.cpp kcalc_core.cpp configdlg.cpp fontdlg.cpp dlabel.cpp
OBJS    = kcalc.o   kcalc_core.o configdlg.o fontdlg.o dlabel.o
SRCMETA = kcalc.moc configdlg.moc fontdlg.moc dlabel.moc
HDRS    = kcalc.h configdlg.h fontdlg.h dlabel.h

TARGET  = kcalc

###########################

.SUFFIXES: .cpp

INCLUDES  = @all_includes@ -I. -I@top_srcdir@
DEFS      = @DEFS@
MOC	  = @MOC@
CXX	  = @CXX@
CXXFLAGS  = @CXXFLAGS@
CPPFLAGS  = @CPPFLAGS@
CC	  = @CC@
CFLAGS    = @CFLAGS@
LDFLAGS   = @all_libraries@ -lkdecore -lkdeui -lqt -lX11 -lXext -lm

############# Install ##############

INSTALL      = @INSTALL@ -m 0755
INSTALL_DATA = @INSTALL@ -m 0644
INSTALL_DIR  = @INSTALL@ -d -m 0755

prefix       = @prefix@
BINDIR       = $(prefix)/bin
PICSDIR      = $(prefix)/share/apps/kcalc/pics
ICONDIR      = $(prefix)/share/icons
DOCSDIR      = $(prefix)/share/doc/HTML/kcalc
APPSDIR      = $(prefix)/share/applnk/Utilities

########## Implicit Rules ##########

.SUFFIXES: .cpp .c

.cpp.o:
	$(CXX) $(DEFS) $(INCLUDES) $(CPPFLAGS) $(CXXFLAGS) -c $<

.c.o:
	$(CC) $(DEFS) $(INCLUDES) $(CPPFLAGS) $(CFLAGS) -c $<

########## Build Rules ##########

all: $(TARGET)

Makefile: Makefile.in
	cd .. && CONFIG_FILES=kcalc/$@ CONFIG_HEADERS= $(SHELL) ./config.status

$(TARGET): $(SRCMETA) $(OBJS)
	$(CXX) -o $(TARGET) $(OBJS) $(LDFLAGS)

install-exec: all
	$(INSTALL_DIR) $(BINDIR)
	$(INSTALL) $(TARGET) $(BINDIR)

install-data:
	(cd doc && $(MAKE) install)
	$(INSTALL_DIR) $(PICSDIR)
	$(INSTALL_DIR) $(ICONDIR)
	$(INSTALL_DATA) kcalc.xpm  $(ICONDIR)
	$(INSTALL_DATA) kcalclogo.xpm  $(PICSDIR)
	$(INSTALL_DIR) $(APPSDIR)
	$(INSTALL_DATA) kcalc.kdelnk  $(APPSDIR)

install: install-exec install-data

uninstall:
	rm -f $(BINDIR)/$(TARGET)
	rm -f $(ICONDIR)/kcalc.xpm
	rm -f $(PICSDIR)/kcalclogo.xpm
	rm -f $(APPSDIR)/kcalc.kdelnk
	(cd doc && $(MAKE) uninstall)

clean:
	rm -f core *~ *.bak *.BAK $(SRCMETA) $(OBJS) $(TARGET)

veryclean:
	rm -f *~ *.bak *.BAK $(TARGET) $(SRCMETA) $(OBJS) core

depend: $(SRCS)
	@makedepend $(INCLUDES) $(SRCS) 2> /dev/null

########## Meta objects ##########

%.moc: %.h
	$(MOC) $< -o $@

##################################
